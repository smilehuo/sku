/* component/specwindow/specwindow.wxss */

.modal-container {
  width: 100%;
  height: 100%;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}


/* 商品信息 */

.goods-image {
  height: 260rpx;
  width: 260rpx;
  background-color: white;
  border: #eaeaea 1rpx solid;
  border-radius: 10rpx;
  position: absolute;
  top: -60rpx;
  left: 30rpx;
}

.close-window-image {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  right: 30rpx;
  padding: 20rpx;
  top: 20rpx;
}

/* 价格 */

.price-container {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.price-text {
  color: #f10215;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 300rpx;
}

.select-container {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.select-text {
  color: #939393;
  font-size: 24rpx;
  margin-left: 300rpx;
  width: 60rpx;
}

.select-text-value {
  margin-right: 30rpx;
  flex: 1;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 规格 */

.scroll-container {
  margin-top: 20rpx;
  height: 580rpx;
  background-color: #fafafa;
  padding: 5rpx 0rpx;
}

.scroll-view {
  overflow: hidden;
  height: 100%;
}

.prop-value-container {
  display: flex;
  flex-flow: wrap;
  flex-direction: row;
  margin: 0rpx 30rpx;
}

.prop-title {
  font-size: 28rpx;
  color: #939393;
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.prop-value-n {
  color: #939393;
  font-size: 28rpx;
  background-color: #eaeaea;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.prop-value-s {
  color: white;
  font-size: 28rpx;
  background-color: #f10215;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.prop-value-ns {
  color: #c8c8c8;
  font-size: 28rpx;
  background-color: #f5f5f5;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 确认 */

.submit-button {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-bg {
  height: 100rpx;
  width: 100%;
}

.submit-text {
  font-size: 32rpx;
  color: white;
  position: absolute;
  font-weight: bold;
}

